<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code_home"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="#e7e7e7"
            android:gravity="center"
            android:hint="请输入索引关键字"
            android:textColorHint="@color/lightblue"
            android:textSize="14sp"
            android:textColor="@color/lightblue"
            android:inputType="number"
            />

        <Button
            android:id="@+id/btn_search_code_home"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="搜索"
            android:background="@drawable/btn_selector"/>

        <Button
            android:id="@+id/btn_stop_code_home"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="停止"
            android:background="@drawable/btn_selector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="总量:"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_sum_code_home"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="每分钟上号:"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_minute_code_home"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="峰值:"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_peak_code_home"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="编号"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="IMSI"
            android:textColor="@color/black"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="运营商"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="归属地"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="BBU编号"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="时间"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_code_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>