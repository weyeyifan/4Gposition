<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white40</item>
        <item name="colorPrimaryDark">@color/white40</item>
        <item name="colorAccent">@color/white40</item>
        <item name="colorControlNormal">#5fa3d0</item>
        <item name="colorControlActivated">@color/lightblue</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/lightblue</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/lightblue</item>
        <item name="android:state_selected">@color/lightblue</item>
        <item name="tabBackground">@drawable/tab_selector</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--对话框按钮文字颜色-->
        <item name="colorAccent">#FFCC00</item>
        <!--对话框内容文字颜色-->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!--对话框背景色-->
        <item name="android:background">#5fa3d0</item>
    </style>

</resources>

